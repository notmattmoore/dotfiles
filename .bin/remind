#!/bin/sh

display="$(ps --no-headers -f -C xinit | grep -E "^$USER" | grep -E -m 1 -wo ":[0-9]+")"

case "$@" in 
  "at "*) A="$(echo $@ | cut -c 4-)" ;;
  "in "*) A="now + $(echo $@ | cut -c 4-)" ;;
  *) A="now + $@" ;;
esac

(
at "$A" << _EOF_
zenity --info --text "Reminder!" >/dev/null 2>& 1
_EOF_
) | grep -Fv 'warning: commands will be executed using'
